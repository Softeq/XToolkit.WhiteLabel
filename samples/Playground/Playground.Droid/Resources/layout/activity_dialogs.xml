<?xml version="1.0" encoding="UTF-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/activity_dialogs_alert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Open Alert" />

    <TextView
        android:id="@+id/activity_dialogs_alert_result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_dialogs_alert_button"
        android:text="click above" />

    <Button
        android:id="@+id/activity_dialogs_dialog_dismiss_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/activity_dialogs_alert_result_label"
        android:text="Open Dialog - Until Dismiss" />

    <TextView
        android:id="@+id/activity_dialogs_dialog_dismiss_result_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/activity_dialogs_dialog_dismiss_button"
        android:text="click above" />

</RelativeLayout>
