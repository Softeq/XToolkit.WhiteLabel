<?xml version="1.0" encoding="UTF-8" ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/activity_dialogs_alert_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Open Alert" />
            <TextView
                android:id="@+id/activity_dialogs_alert_result_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="click above" />

            <Button
                android:id="@+id/activity_dialogs_confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Open Confirm" />
            <TextView
                android:id="@+id/activity_dialogs_confirm_result_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="click above" />

            <Button
                android:id="@+id/activity_dialogs_actionsheet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Open ActionSheet" />
            <TextView
                android:id="@+id/activity_dialogs_actionsheet_result_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="click above" />

            <Button
                android:id="@+id/activity_dialogs_dialog_dismiss_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Open Dialog - Until Dismiss" />
            <TextView
                android:id="@+id/activity_dialogs_dialog_dismiss_result_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="click above" />

            <Button
                android:id="@+id/activity_dialogs_dialog_result_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Open Dialog - Until Result" />
            <TextView
                android:id="@+id/activity_dialogs_dialog_result_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="click above" />

            <Button
                android:id="@+id/activity_dialogs_two_dialogs_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Open Two Dialogs" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
