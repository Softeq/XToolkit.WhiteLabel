<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="Playground.Forms.Views.TabbedNavigation.TabbedPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
    android:TabbedPage.ToolbarPlacement="Bottom"
    android:TabbedPage.IsSwipePagingEnabled="False"
    xmlns:vm="clr-namespace:Playground.Forms.ViewModels.TabbedNavigation;assembly=Playground.Forms"
    x:DataType="vm:TabbedPageViewModel"
    BackgroundColor="{AppThemeBinding Light=White, Dark=Black}"
    Title="{Binding Title}">

    <NavigationPage.TitleView>

        <StackLayout
            Orientation="Horizontal">

            <Label
                Text="{Binding Title}"
                FontSize="18"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand" />

            <Button
                Text="Settings"
                FontSize="12"
                BackgroundColor="Transparent"
                Command="{Binding OpenNewPageCommand}" />

        </StackLayout>

    </NavigationPage.TitleView>

</TabbedPage>